prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include/@PACKAGE@-@VERSION@

Name: SunPinyin
Description: IME library based on Statistical Language Model
Version: @PACKAGE_VERSION@
URL: http://sunpinyin.org
Requires.private: sqlite3 @PKG_CONF_PYTHON_REQUIRES@
Libs: -L${libdir} -lsunpinyin
Libs.private: -lm
Cflags: -I${includedir} @PKG_CONF_PYTHON_CFLAGS@
